set ignorecase true
set icons true

cmd mkdir ${{
    printf "Directory Name: "
    read ans
    mkdir $ans
}}

cmd mkfile ${{
    printf "File Name: "
    read ans
    $EDITOR $ans
}}

cmd unarchive ${{
    case "$f" in
        *.zip) unzip "$f" ;;
        *.tar.gz) tar -xzvf "$f" ;;
        *.tar.bz2) tar -xjvf "$f" ;;
        *.tar) tar -xvf "$f" ;;
        *) echo "Unsupported format" ;;
    esac
}}

map au unarchive

## Custom Keybindings
map . set hidden!
map p paste
map x cut
map y copy
map R reload
map mf mkfile
map md mkdir

## Favorite direcotries
map gh cd ~
map gD cd ~/Downloads/
map gd cd ~/Documents/

